
<%= render 'shared/error', obj: @ingrediant%>

<div class="row">
    <div class="col-md-12">
        <%= form_for(@ingrediant, :html => {class: "form-horizontal",role: "form"}) do |f|%>
            <div class="form-group">
                <div class="control-label col-md-8">
                    <%=f.label :name%>
                </div>
                <div class= "col-md-10">
                    <%= f.text_field :name , class: "form-control", placeholder: "Enter Ingrediant",autofocus: true%>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <%=f.submit(@ingrediant.new_record? ? "Add Ingrediant" : "Edit Ingrediant" , class: "btn btn-primary btn-md btn-xlarge")%>
                    <%=link_to "Return to Ingrediants", ingrediants_path, class: "btn btn-primary btn-md btn-xlarge"%>
                </div>
            </div>

        <%end%>
    </div>
</div>
