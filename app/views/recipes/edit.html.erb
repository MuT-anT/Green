<%= render 'shared/page_title', title: "Editing an Exisiting Todo"%>
<% if @recipe.errors.any? %>
    <h2>The following errors occured </h2>
    <ul>
    <% @recipe.errors.full_messages.each do |m| %>
    <li><%= m%></li>
    <%end%>
    </ul>
<% end %>


<div class="col-md-8 well">
<%=form_for @recipe do |f|%>
    <p>
    <strong><%= f.label :name%></strong> <br>
    <%= f.text_field :name%>
    </p>

    <p>
    <%= f.label :description%> <br>
    <%= f.text_area :description , size: "100x5"%>
    </p>

    <p>
    <%= f.submit%> <br>
    </p>

<% end %> 
</div>